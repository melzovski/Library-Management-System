@page
@model LibMan_c1627015m.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_LayoutLogin.cshtml";
}

<h1>Add Book</h1>
<h3>You can add a new book to your library.</h3>
<hr />

<form method="post">
    <div class="form-row">
        <div asp-validation-summary="ModelOnly" class="text-danger" style="color:red"></div>
        <div class="form-group col-md-6">

            <label asp-for="Book.Username" class="control-label"></label>
            <select asp-for="Book.Username" class="form-control" asp-items="ViewBag.Username"></select>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Book.Tittle" class="control-label"></label>
            <input asp-for="Book.Tittle" class="form-control" />
            <span asp-validation-for="Book.Tittle" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Book.Author" class="control-label"></label>
        <input asp-for="Book.Author" class="form-control" />
        <span asp-validation-for="Book.Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Translator" class="control-label"></label>
        <input asp-for="Book.Translator" class="form-control" />
        <span asp-validation-for="Book.Translator" class="text-danger"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Book.Publisher" class="control-label"></label>
            <input asp-for="Book.Publisher" class="form-control" />
            <span asp-validation-for="Book.Publisher" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Book.BookDescription" class="control-label"></label>
            <input asp-for="Book.BookDescription" class="form-control" />
            <span asp-validation-for="Book.BookDescription" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Book.Categories" class="control-label"></label>
            <input asp-for="Book.Categories" class="form-control" />
            <span asp-validation-for="Book.Categories" class="text-danger"></span>
            
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Book.ReadingStatus" class="control-label"></label>
            <input asp-for="Book.ReadingStatus" class="form-control" />
            <span asp-validation-for="Book.ReadingStatus" class="text-danger"></span>
            </label>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Book.BookCover" class="control-label"></label>
            <input asp-for="Book.BookCover" class="form-control" />
            <span asp-validation-for="Book.BookCover" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">add</button>
</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
